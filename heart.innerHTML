    button {
      margin-top: 15px;
      padding: 12px 18px;
      font-size: 20px;
      border: none;
      border-radius: 14px;
      cursor: pointer;
      background: #ff2e75;
      color: white;
      transition: 0.3s;
    }

    button:hover {
      transform: scale(1.05);
      background: #d40055;
    }

    .naruto {
      margin-top: 15px;
      font-size: 22px;
      color: green;
      font-weight: bold;
      display: none;
      animation: pop 0.5s ease;
    }

    @keyframes pop {
      from {transform: scale(0.5); opacity: 0;}
      to {transform: scale(1); opacity: 1;}
    }

    /* Floating Hearts */
    .heart {
      position: absolute;
      color: red;
      font-size: 22px;
      animation: floatUp 6s linear infinite;
    }

    @keyframes floatUp {
      0% {transform: translateY(100vh); opacity: 1;}
      100% {transform: translateY(-10vh); opacity: 0;}
    }

    /* Butterflies */
    .butterfly {
      position: absolute;
      font-size: 30px;
      animation: fly 4s linear infinite;
    }

    @keyframes fly {
      0% {left: -50px; top: 80%;}
      100% {left: 110%; top: 10%;}
    }

    .finalmsg {
      font-size: 18px;
      white-space: pre-line;
      margin-top: 15px;
      color: #111;
    }

    .yesno button {
      margin: 10px;
      width: 120px;
    }

    .noBtn {
      background: gray;
    }
  </style>
</head>

